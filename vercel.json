{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "build": {
    "env": {
      "VITE_BACKEND_HTTP": "https://unichatbot.onrender.com"
    }
  },
  "outputDirectory": "build/client"
}
